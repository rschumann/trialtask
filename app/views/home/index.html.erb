<% content_for :jumbotron do %>
  <div class="jumbotron jumbotron-home">
    <div class="container">
      <h1>Welcome to <em class="handwriting">Gadgets</em></h1>
      <p>This is a sample application to create something more unique.</p>
      <p data-no-turbolink>
        <a class="btn btn-primary btn-lg" role="button" href="users/sign_up">Sign Up for free &raquo;</a>
      </p>
    </div>
  </div>	
<% end %>

<div class="row"> 
  <div class="col-md-6">
  </div>
  <div class="col-md-6">  
  </div>
</div>
<div id="gadgets-home" class="row"> 
  <% @gadgets.each do |gadget| %>
    <div class="col-xs-6 col-sm-4 col-md-3 item-box" data-no-turbolink>      
      <% gadget.images.limit(1).each do |image| %>
	    <%= link_to image_tag(image.photo(:square)), gadget %>   
	  <% end %>
	  <div class="item">
	    <div class="item-inner">
	      <h2>
	        <%= link_to truncate_html(gadget.name, :length => 20, :omission => '...'), gadget %>
	      </h2>
	      <p>
	        <%=raw truncate_html(gadget.content, :length => 120, :omission => "%s") % link_to("... [more]", gadget) %>
	      </p>
	      <p>
	        By: <%= link_to gadget.user.email, gadget.user %>
	      </p>
	    </div>
        <p>
          <%= link_to 'Show', gadget, class: 'btn btn-primary pull-right' %>
        </p>
      </div>
    </div>
  <% end %>
</div>